include mixins/all

doctype html
html(lang='ru')
    head
        include parts/head
    body.page
        include parts/header

        main.page__inner

            section.section.section--indents.section--width-extended
                .section__inner
                    .slider.slider--bg-violet.slider--size-normal.swiper-container.js-main-slider
                        .slider__counter.js-main-pagination

                        ul.slider__list.slider__list--corners-rounded.slider__list--ovh.swiper-wrapper
                            // slides should have frame
                            li.slider__slide.swiper-slide
                                .slider__content
                                    h1.slider__title Академия Интернет Бизнеса
                                    h5.slider__sub-title Центр создания и развития интернет бизнеса
                                    +button('Бесплатная Консультация', ' slider__slide-button button--size-big', '#')

                                .slider__img-container(style='background-image:url("images/placeholders/woman.jpg")')
                                    //include ../images/placeholders/woman.jpg
                                    //img(src='../images/placeholders/woman.jpg')

                            li.slider__slide.swiper-slide
                                .slider__content
                                    h1.slider__title Академия Интернет Бизнеса
                                    h5.slider__sub-title Центр создания и развития интернет бизнеса
                                    +button('Бесплатная Консультация', ' slider__slide-button button--size-big', '#')

                                .slider__img-container(style='background-image:url("images/placeholders/evgenya.jpg")')
                                    //include ../images/placeholders/woman.jpg
                                    //img(src='../images/placeholders/woman.jpg')

                    button.slider__button.slider__button--prev.js-story-button-prev
                        +icon('icon--size-micro')
                            include ../images/arrow.svg
                    button.slider__button.slider__button--next.js-story-button-next
                        +icon('icon--size-micro')
                            include ../images/arrow.svg

            section.section.section--vertical-indents
                +text-banner(
                    '78% выпускников академии открывают свой бизнес в течение 2 лет',
                    'За 7 лет обучили 24 789 человек по всей России'
                )

            section.section
                .section__inner
                    .cards
                        ul.cards__list.cards__list--small-card-size
                            li.cards__item
                                // title, link, текст
                                +card-icon('Год основания', '#', 'В декабре академия отпраздновала день рождения. Было выпито 3519 бокалов советского шампанского' )
                                    include ../images/calendar-colorized.svg
                            li.cards__item
                                // title, link, текст
                                +card-icon('Год основания', '#', 'В декабре академия отпраздновала день рождения. Было выпито 3519 бокалов советского шампанского' )
                                    include ../images/chat.svg
                            li.cards__item
                                // title, link, текст
                                +card-icon('Год основания', '#', 'В декабре академия отпраздновала день рождения. Было выпито 3519 бокалов советского шампанского' )
                                    include ../images/hat.svg

            section.section.section.section--bg-light-blue.section--vertical-indents
                .section__inner
                    .block-base
                        +form('Помочь с выбором?')

            +call-to-action('Начните действовать прямо сейчас', 'Записаться на обучение')


        +popup('js-popup-form', 'Помочь с выбором?')
            +form('Помочь с выбором?')

        include parts/footer

include parts/scripts
